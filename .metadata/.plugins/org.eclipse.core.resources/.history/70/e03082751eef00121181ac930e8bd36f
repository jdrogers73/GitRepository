<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

<!-- layout_width/height states how big the viewgroup wants to be. Used in the measure pass
by the LayoutParams class; match parent means it wants to be as big as the parent -->
<!-- padding: This is the padding within the layout, not outside the layout -->
<!-- tools:context is the activity the layout is associated with -->

<!-- subclass of view. Purpose is to display text. -->
<!-- purpose of wrap_content is to make window just large enough to fit the text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

</RelativeLayout>
